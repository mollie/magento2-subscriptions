<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">My Subscriptions</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Mollie\Subscriptions\Block\Frontend\Customer\Account\ActiveSubscriptions" name="active_subscriptions" template="Mollie_Subscriptions::customer/account/subscriptions.phtml" cacheable="false"/>
        </referenceContainer>
    </body>
</page>
